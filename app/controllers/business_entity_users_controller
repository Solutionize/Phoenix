class BusinessEntityUsersController < ApplicationController
  before_action :set_business_entity_user, only: [:show, :edit, :update, :destroy]

  # GET /business_entity_users
  # GET /business_entity_users.json
  def index
    @business_entity_users = BusinessEntityUser.all
  end

  # GET /business_entity_users/1
  # GET /business_entity_users/1.json
  def show
  end

  # GET /business_entity_users/new
  def new
    @business_entity_user = BusinessEntityUser.new
  end

  # GET /business_entity_users/1/edit
  def edit
  end

  # POST /business_entity_users
  # POST /business_entity_users.json
  def create
    @business_entity_user = BusinessEntityUser.new(business_entity_user_params)

    respond_to do |format|
      if @business_entity_user.save
        format.html { redirect_to @business_entity_user, notice: 'Business entity user was successfully created.' }
        format.json { render :show, status: :created, location: @business_entity_user }
      else
        format.html { render :new }
        format.json { render json: @business_entity_user.errors, status: :unprocessable_entity }
      end
    end
  end

  # PATCH/PUT /business_entity_users/1
  # PATCH/PUT /business_entity_users/1.json
  def update
    respond_to do |format|
      if @business_entity_user.update(business_entity_user_params)
        format.html { redirect_to @business_entity_user, notice: 'Business entity user was successfully updated.' }
        format.json { render :show, status: :ok, location: @business_entity_user }
      else
        format.html { render :edit }
        format.json { render json: @business_entity_user.errors, status: :unprocessable_entity }
      end
    end
  end

  # DELETE /business_entity_users/1
  # DELETE /business_entity_users/1.json
  def destroy
    @business_entity_user.destroy
    respond_to do |format|
      format.html { redirect_to business_entity_users_url, notice: 'Business entity user was successfully destroyed.' }
      format.json { head :no_content }
    end
  end

  private
    # Use callbacks to share common setup or constraints between actions.
    def set_business_entity_user
      @business_entity_user = BusinessEntityUser.find(params[:id])
    end

    # Never trust parameters from the scary internet, only allow the white list through.
    def business_entity_user_params
      params.require(:business_entity_user).permit(:business_entity_id, :user_id, :active, :designation)
    end
end
